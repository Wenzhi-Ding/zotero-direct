{
	"name": "zotero-direct",
	"version": "0.10.0",
	"description": "Plugin to export and format annotations from Zotero into Obsidian",
	"main": "main.js",
	"type": "module",
	"scripts": {
		"dev": "node esbuild.config.mjs",
		"build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
		"version": "node version-bump.mjs && git add manifest.json versions.json",
		"lint": "eslint ."
	},
	"keywords": [
		"Zotero"
	],
	"author": "Stefano Pagliari; Wenzhi Ding",
	"license": "MIT",
	"devDependencies": {
		"@eslint/js": "^9.30.1",
		"@types/node": "^22.0.0",
		"builtin-modules": "^4.0.0",
		"esbuild": "^0.25.0",
		"eslint": "^9.0.0",
		"eslint-plugin-obsidianmd": "latest",
		"globals": "^15.0.0",
		"jiti": "^2.6.1",
		"obsidian": "^1.7.2",
		"tslib": "^2.8.0",
		"typescript": "^5.7.0",
		"typescript-eslint": "^8.0.0"
	},
	"dependencies": {
		"@popperjs/core": "^2.11.2",
		"turndown": "^7.1.1"
	},
	"knip": {
		"ignore": [
			"sql-wasm.js"
		]
	}
}
